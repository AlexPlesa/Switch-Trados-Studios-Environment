<Window x:Class="Switch_Trados_Studios_Environment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Switch_Trados_Studios_Environment"
        mc:Ignorable="d"
        Title="Switch Environment 1.5.0" Height="460" Width="346" 
        Icon="Switch.png"
        ResizeMode="CanMinimize">
    <Grid Height="420">
        <StackPanel Grid.ColumnSpan="4">
            <StackPanel Margin="10,10,10,10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,5,5">
                    <TextBlock HorizontalAlignment="Left"  Text="Select environment" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox 
                            Name="EnvironmentType" 
                            HorizontalAlignment="Left" 
                            Margin="0,10,0,0" 
                            VerticalAlignment="Top"
                            Width="220"  
                            Height="30"/>
                        <Button 
                            Width="60"
                            Height="30"
                            Name="Help" 
                            Content="Help" 
                            Margin="5,10,0,0" Click="Help_Click" />
                    </StackPanel>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,5,5">
                    <TextBlock 
                        HorizontalAlignment="Left"  
                        Text="Select build or .config file" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" 
                        FontSize="16"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox 
                            Name="StudioBuildType" 
                            HorizontalAlignment="Left" 
                            Margin="0,10,0,0" 
                            VerticalAlignment="Top"
                            Width="220" 
                            Height="30"/>
                        <Button 
                            Width="60"
                            Height="30"
                            Name="CustomLocation" 
                            Content=" Browse " 
                            Margin="5,10,0,0" 
                            Click="CustomLocation_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="20,0,10,0">
                <TextBox 
                    IsReadOnly="True" 
                    Name="Status" 
                    HorizontalAlignment="Left" 
                    VerticalContentAlignment="Top" 
                    BorderThickness="0" 
                    Text="" 
                    Visibility="Hidden" 
                    TextAlignment="Left" 
                    TextWrapping="Wrap" 
                    Height="151" 
                    Width="250" 
                    FontSize="16" 
                    VerticalAlignment="Stretch" 
                    ScrollViewer.CanContentScroll="True" 
                    Opacity="0.8"/>
            </StackPanel>
            <Button 
                Name="SwitchEnvironmentButton" 
                Content="Switch Environment" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,0" Height="35" Width="280" 
                Click="ChangeEnvironment_Click"/>
        </StackPanel>
    </Grid>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>
</Window>
